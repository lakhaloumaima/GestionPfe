@model PfeApp.Models.Pfe_etudiant

@{
    ViewData["Title"] = "Create";
}
    @if (User.Identity.IsAuthenticated)
{
    <h1>Affecter un Etudiant a un Pfe </h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PfeId" class="control-label"></label>
                    <select asp-for="PfeId" class="form-control" asp-items="ViewBag.PfeId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="EtudiantID" class="control-label"></label>
                    <select asp-for="EtudiantID" class ="form-control" asp-items="ViewBag.EtudiantID"></select>
                </div>
