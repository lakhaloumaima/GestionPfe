
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pfe App final </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/styles.css" asp-append-version="true" />
    <!-- google fonts -->

    <link href="fonts.googleapis.com/css2?family=Jost:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Template CSS -->
    @* <link rel="stylesheet" href="~/css/style-starter.css"> *@

    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.css" rel="stylesheet">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/sidebar/css/style.css">

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {


        <div class="wrapper d-flex align-items-stretch">
            <nav id="sidebar">
                <ul class="list-unstyled components mb-5">
                    <li>
                        <h1> 
                            <a asp-area ="" asp-controller="Pfe_etudiant" asp-action="Index"> EPI </a>
                        </h1>
                    </li>
                </ul>
                <div class="p-4 pt-5">

                    <br />
                    <ul class="list-unstyled components mb-5">
                        <li class="active">
                            <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Pfes des Etudiants
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu">
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Pfe_etudiant" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>    Pfes des Etudiants

                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Pfe_etudiant" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Affecter un Pfe a un Etudiant

                                    </a>
                                </li>
                               
                            </ul>
                        </li>
                        <li>
                            <a href="#homeSubmenu1" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Etudiants
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu1">
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Etudiants" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>   Etudiants

                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Etudiants" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un etudiant

                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li>
                            <a href="#homeSubmenu2" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Enseignants
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu2">
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Enseignants" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>    Enseignants

                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Enseignants" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un Enseignant

                                    </a>
                                </li>

                            </ul>
                        </li>
                        <li>
                            <a href="#homeSubmenu3" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Pfes
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu3">
                                <li>

                                    <a class="nav-link" asp-area="" asp-controller="Pfes" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>     Pfes

                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Pfes" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un Pfe

                                    </a>
                                </li>

                            </ul>
                        </li>
                         <li>
                            <a href="#homeSubmenu4" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Soutenances
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu4">
                                <li>

                                      <a class="nav-link" asp-area="" asp-controller="Soutenances" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>    Soutenances

                            </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Soutenances" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un Soutenance

                                    </a>
                                </li>

                            </ul>
                        </li>
                       <li>
                            <a href="#homeSubmenu5" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                                <i class="fa fa-list" aria-hidden="true"></i>  Societes
                            </a>
                            <ul class="collapse list-unstyled" id="homeSubmenu5">
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Societes" asp-action="Index">
                                        <i class="fa fa-table" aria-hidden="true"></i>     Societes
    
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link" asp-area="" asp-controller="Societes" asp-action="Create">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Ajouter un Societe

                                    </a>
                                </li>

                            </ul>
                        </li>
                          

                        <li>
                            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "/", new { area = "" })">
                                @Html.AntiForgeryToken()
                                <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</button>
                            </form>
                        </li>



                    </ul>

                </div>
               
            </nav>
       
            <!-- Page Content  -->
            <div id="content" class="p-4 p-md-5">

                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="btn btn-primary">
                            <i class="fa fa-bars"></i>
                            <span class="sr-only">Toggle Menu</span>
                        </button>
                        <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fa fa-bars"></i>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="nav navbar-nav ml-auto">

                                <li>
                                    <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Welcome @UserManager.GetUserName(User) ! </a>
                                </li>
                            </ul>
                        </div>
                        
                     

                    </div>
                </nav>
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

        </div>
    }
    else
    {
      
        @RenderBody()
    }
    <!-- ~/footer -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <script src="~/sidebar/js/jquery.min.js"></script>
        <script src="~/sidebar/js/popper.js"></script>
        <script src="~/sidebar/js/bootstrap.min.js"></script>
        <script src="~/sidebar/js/main.js"></script>

    <script src="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/js/bootstrap.min.js"></script>

    @RenderSection("Scripts", required: false)



